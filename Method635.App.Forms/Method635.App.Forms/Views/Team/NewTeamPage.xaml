<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Method635.App.Forms.Views.Team.NewTeamPage"
             Title="Create a new Team">
    <StackLayout Orientation="Vertical">
        <Label Text="Team Name" />
        <Entry Placeholder="Name" Text="{Binding TeamName}" />
        <Label Text="Names must be shorter than 22 characters and without spaces or periods." FontSize="Micro" />
       
        <Label Text="Team Size" />
        <Entry Placeholder="Number of Participants" Text="{Binding TeamSize}" />
        <Label Text="Choose how many participants the team should have" FontSize="Micro"/>

        <Label Text="Purpose (optional)" />
        <Editor Placeholder="Briefly describe the purpose of your team" MinimumWidthRequest="100" Text="{Binding Purpose}"/>

        <Button Text="Create Team" Command="{Binding CreateTeamCommand}" />
    </StackLayout>
  
</ContentPage>