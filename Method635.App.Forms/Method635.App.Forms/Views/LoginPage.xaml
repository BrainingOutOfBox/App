<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Method635.App.Forms.Views.LoginPage"
             Title="Login to Brainstorming">
    <ScrollView>
        <StackLayout Orientation="Vertical" Margin="5, 10">
            <Entry Text="{Binding UserName}" Placeholder="Username" IsTabStop="True" TabIndex="0" HeightRequest="50"/>
            
            <Entry Text="{Binding Password}" Placeholder="Password" IsTabStop="True" TabIndex="1" IsPassword="True" HeightRequest="50"/>

            <Label Text="{Binding ErrorText}" TextColor="Red" IsEnabled="{Binding HasError}" />
            <Button Command="{Binding LoginCommand}" Text="Login" TabIndex="2"/>
            <Button Command="{Binding ShowRegisterCommand}" Text="Register" TabIndex="3" />
        </StackLayout>
    </ScrollView>
</ContentPage>